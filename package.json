{
  "name": "glot",
  "private": true,
  "version": "0.0.4",
  "description": "a tiny, simple, powerful, expressive, i18n library",
  "main": "index.js",
  "scripts": {
    "build": "for P in packages/* ; do pushd $P ; npm run build ; popd ; done",
    "format": "for P in packages/* ; do pushd $P ; npm run format ; popd ; done",
    "test": "for P in packages/* ; do pushd $P ; npm run test ; popd ; done",
    "watch": "for P in packages/* ; do pushd $P ; ( npm run watch & ) ; popd ; done"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodogoFreddie/glot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodogoFreddie/glot/issues"
  },
  "homepage": "https://github.com/CodogoFreddie/glot#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-freddie-ridell": "0.0.8",
    "eslint": "^5.10.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "prettier": "^1.15.3"
  },
  "babel": {
    "presets": [
      "freddie-ridell"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "files": [
    "/index.js",
    "/lib",
    "/main.js"
  ],
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true
  },
  "dependencies": {
    "yalc": "^1.0.0-pre.25"
  }
}
