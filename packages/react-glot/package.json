{
  "name": "@freddieridell/react-glot",
  "version": "0.0.4",
  "description": "A set of React components used for working with glot",
  "main": "lib/index.js",
  "scripts": {
    "test-watch": "jest --watch --bail --runInBand test",
    "test": "jest --coverage test src",
    "build": "NODE_ENV=production babel src --out-dir lib --minified --source-maps --presets minify,freddie-ridell",
    "format": "prettier --write src/**/*",
    "watch": "babel src --out-dir lib --watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-freddie-ridell": "0.0.8",
    "babel-preset-minify": "^0.5.0",
    "eslint": "^5.10.0",
    "eslint-config-react-app": "^3.0.5",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "jest-cli": "^23.6.0",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "babel": {
    "presets": [
      "freddie-ridell"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "files": [
    "/index.js",
    "/lib",
    "/main.js"
  ],
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true
  },
  "dependencies": {}
}
